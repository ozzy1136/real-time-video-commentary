{
	"compilerOptions": {
		"target": "ES6",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"baseUrl": ".",
		"paths": {
			"@styles/*": ["app/_assets/styles/*"],
			"@components/*": ["app/_components/*.jsx"],
			"@context/*": ["app/_context/*.js"],
			"@data/*": ["app/_data/*.js", "app/_data/*.json"],
			"@hooks/*": ["app/_hooks/*.js"],
			"@lib/*": ["app/_lib/*.js"],
			"@services/*": ["app/_services/*.js"],
			"@utils/*": ["app/_utils/*.js"],
			"@images/*": ["app/_assets/images/*"]
		},
		"checkJs": true
	},
	"include": ["app", "middleware.js"]
}
